<?xml version="1.0" encoding="UTF-8"?>
<project name="mycat-server" default="all">
  
  
  <property file="mycat-server.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/CVS/**"/>
    <exclude name="**/SCCS/**"/>
    <exclude name="**/RCS/**"/>
    <exclude name="**/rcs/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/.pyc/**"/>
    <exclude name="**/.pyo/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/*.lib/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/.bundle/**"/>
    <exclude name="**/*.rbc/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.war"/>
    <include name="*.ear"/>
    <include name="*.apk"/>
    <include name="*.zip"/>
    <include name="*.swc"/>
    <include name="*.ane"/>
    <include name="*.egg"/>
    <include name="*.jar"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.1.7" value="${jdk.home.1.7}/bin"/>
  <path id="jdk.classpath.1.7">
    <fileset dir="${jdk.home.1.7}">
      <include name="jre/lib/charsets.jar"/>
      <include name="jre/lib/deploy.jar"/>
      <include name="jre/lib/javaws.jar"/>
      <include name="jre/lib/jce.jar"/>
      <include name="jre/lib/jfr.jar"/>
      <include name="jre/lib/jfxrt.jar"/>
      <include name="jre/lib/jsse.jar"/>
      <include name="jre/lib/management-agent.jar"/>
      <include name="jre/lib/plugin.jar"/>
      <include name="jre/lib/resources.jar"/>
      <include name="jre/lib/rt.jar"/>
      <include name="jre/lib/ext/access-bridge-64.jar"/>
      <include name="jre/lib/ext/dnsns.jar"/>
      <include name="jre/lib/ext/jaccess.jar"/>
      <include name="jre/lib/ext/localedata.jar"/>
      <include name="jre/lib/ext/sunec.jar"/>
      <include name="jre/lib/ext/sunjce_provider.jar"/>
      <include name="jre/lib/ext/sunmscapi.jar"/>
      <include name="jre/lib/ext/zipfs.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.1.7}"/>
  <property name="project.jdk.bin" value="${jdk.bin.1.7}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.7"/>
  
  
  <!-- Project Libraries -->
  
  <path id="library.maven:_com.alibaba:druid:1.0.14.classpath">
    <pathelement location="${path.variable.maven_repository}/com/alibaba/druid/1.0.14/druid-1.0.14.jar"/>
  </path>
  
  <path id="library.maven:_com.google.guava:guava:18.0.classpath">
    <pathelement location="${path.variable.maven_repository}/com/google/guava/guava/18.0/guava-18.0.jar"/>
  </path>
  
  <path id="library.maven:_com.sequoiadb.org:sequoiadb-java-driver:1.0-snapshot.classpath">
    <pathelement location="${path.variable.maven_repository}/com/sequoiadb/org/sequoiadb-java-driver/1.0-SNAPSHOT/sequoiadb-java-driver-1.0-20150615.070208-1.jar"/>
  </path>
  
  <path id="library.maven:_com.univocity:univocity-parsers:1.5.4.classpath">
    <pathelement location="${path.variable.maven_repository}/com/univocity/univocity-parsers/1.5.4/univocity-parsers-1.5.4.jar"/>
  </path>
  
  <path id="library.maven:_junit:junit:4.4.classpath">
    <pathelement location="${path.variable.maven_repository}/junit/junit/4.4/junit-4.4.jar"/>
  </path>
  
  <path id="library.maven:_log4j:log4j:1.2.17.classpath">
    <pathelement location="${path.variable.maven_repository}/log4j/log4j/1.2.17/log4j-1.2.17.jar"/>
  </path>
  
  <path id="library.maven:_mysql:mysql-connector-java:5.1.35.classpath">
    <pathelement location="${path.variable.maven_repository}/mysql/mysql-connector-java/5.1.35/mysql-connector-java-5.1.35.jar"/>
  </path>
  
  <path id="library.maven:_net.sf.ehcache:ehcache-core:2.6.11.classpath">
    <pathelement location="${path.variable.maven_repository}/net/sf/ehcache/ehcache-core/2.6.11/ehcache-core-2.6.11.jar"/>
  </path>
  
  <path id="library.maven:_org.codehaus.jsr166-mirror:jsr166y:1.7.0.classpath">
    <pathelement location="${path.variable.maven_repository}/org/codehaus/jsr166-mirror/jsr166y/1.7.0/jsr166y-1.7.0.jar"/>
  </path>
  
  <path id="library.maven:_org.iq80.leveldb:leveldb-api:0.7.classpath">
    <pathelement location="${path.variable.maven_repository}/org/iq80/leveldb/leveldb-api/0.7/leveldb-api-0.7.jar"/>
  </path>
  
  <path id="library.maven:_org.iq80.leveldb:leveldb:0.7.classpath">
    <pathelement location="${path.variable.maven_repository}/org/iq80/leveldb/leveldb/0.7/leveldb-0.7.jar"/>
  </path>
  
  <path id="library.maven:_org.mapdb:mapdb:1.0.7.classpath">
    <pathelement location="${path.variable.maven_repository}/org/mapdb/mapdb/1.0.7/mapdb-1.0.7.jar"/>
  </path>
  
  <path id="library.maven:_org.mongodb:mongo-java-driver:2.11.4.classpath">
    <pathelement location="${path.variable.maven_repository}/org/mongodb/mongo-java-driver/2.11.4/mongo-java-driver-2.11.4.jar"/>
  </path>
  
  <path id="library.maven:_org.slf4j:slf4j-api:1.7.12.classpath">
    <pathelement location="${path.variable.maven_repository}/org/slf4j/slf4j-api/1.7.12/slf4j-api-1.7.12.jar"/>
  </path>
  
  <path id="library.maven:_org.slf4j:slf4j-log4j12:1.7.12.classpath">
    <pathelement location="${path.variable.maven_repository}/org/slf4j/slf4j-log4j12/1.7.12/slf4j-log4j12-1.7.12.jar"/>
  </path>
  
  
  <!-- Global Libraries -->
  
  
  <!-- Application Server Libraries -->
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <pathelement location="${javac2.home}/javac2.jar"/>
    <pathelement location="${javac2.home}/jdom.jar"/>
    <pathelement location="${javac2.home}/asm4-all.jar"/>
    <pathelement location="${javac2.home}/jgoodies-forms.jar"/>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  <import file="${basedir}/module_mycat-server.xml"/>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.mycat-server" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.mycat-server" description="build all modules"/>
  
  <target name="all" depends="build.modules" description="build all"/>
</project>