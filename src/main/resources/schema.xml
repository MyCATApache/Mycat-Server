	<schema name="TESTDB" checkSQLschema="false" sqlMaxLimit="1000" dataNode="dn1">

		<table name="test_sharding_by_accounting_date" primaryKey="id" autoIncrement="true" dataNode="dn1,dn2,dn3" rule="sharding-by-intfile"/>

